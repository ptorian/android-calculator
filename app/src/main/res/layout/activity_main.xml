<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:textSize="40sp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonClear_text"
                    android:onClick="buttonClear_onClick" />
                <Button
                    android:id="@+id/buttonParen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonParen_text"
                    android:onClick="buttonParen_onClick" />
                <Button
                    android:id="@+id/buttonPercent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonPercent_text" />
                <com.example.sprice.myapplication.components.CalculatorOperatorButton
                    android:id="@+id/buttonDivide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonDivide_text"
                    android:onClick="operatorButton_onClick"
                    app:operator="/"/>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <com.example.sprice.myapplication.components.CalculatorNumericButton
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button7_text"
                    android:onClick="numericButton_onClick"
                    app:numericValue="7" />
                <com.example.sprice.myapplication.components.CalculatorNumericButton
                    android:id="@+id/button8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button8_text"
                    android:onClick="numericButton_onClick"
                    app:numericValue="8" />
                <com.example.sprice.myapplication.components.CalculatorNumericButton
                    android:id="@+id/button9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button9_text"
                    android:onClick="numericButton_onClick"
                    app:numericValue="9" />
                <com.example.sprice.myapplication.components.CalculatorOperatorButton
                    android:id="@+id/buttonMultiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonMultiply_text"
                    android:onClick="operatorButton_onClick"
                    app:operator="*" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <com.example.sprice.myapplication.components.CalculatorNumericButton
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button4_text"
                    android:onClick="numericButton_onClick"
                    app:numericValue="4" />
                <com.example.sprice.myapplication.components.CalculatorNumericButton
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button5_text"
                    android:onClick="numericButton_onClick"
                    app:numericValue="5" />
                <com.example.sprice.myapplication.components.CalculatorNumericButton
                    android:id="@+id/button6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button6_text"
                    android:onClick="numericButton_onClick"
                    app:numericValue="6" />
                <com.example.sprice.myapplication.components.CalculatorOperatorButton
                    android:id="@+id/buttonSubtract"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonSubtract_text"
                    android:onClick="operatorButton_onClick"
                    app:operator="-" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <com.example.sprice.myapplication.components.CalculatorNumericButton
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button1_text"
                    android:onClick="numericButton_onClick"
                    app:numericValue="1" />
                <com.example.sprice.myapplication.components.CalculatorNumericButton
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button2_text"
                    android:onClick="numericButton_onClick"
                    app:numericValue="2" />
                <com.example.sprice.myapplication.components.CalculatorNumericButton
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button3_text"
                    android:onClick="numericButton_onClick"
                    app:numericValue="3" />
                <com.example.sprice.myapplication.components.CalculatorOperatorButton
                    android:id="@+id/buttonAdd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonAdd_text"
                    android:onClick="operatorButton_onClick"
                    app:operator="+" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/buttonSign"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonSign_text" />
                <com.example.sprice.myapplication.components.CalculatorNumericButton
                    android:id="@+id/button0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button0_text"
                    android:onClick="numericButton_onClick"
                    app:numericValue="0" />
                <Button
                    android:id="@+id/buttonDecimal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonDecimal_text"
                    android:onClick="buttonDecimal_onClick" />
                <Button
                    android:id="@+id/buttonEquals"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonEquals_text" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>